<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dz.sba.univ.controllers.LoginController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox maxHeight="200.0" maxWidth="300.0" prefHeight="432.0" prefWidth="300.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Login">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Email" />
                  <TextField fx:id="emailTextField" />
                  <Label layoutX="10.0" layoutY="52.0" text="password" />
                  <TextField fx:id="passwordTextField" layoutX="10.0" layoutY="69.0" />
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="loginBtn" mnemonicParsing="false" text="Login" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        <Button fx:id="registerBtn" mnemonicParsing="false" onAction="#handleRegister" text="Register" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </AnchorPane>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
